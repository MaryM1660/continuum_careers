---
const plans = [
  {
    name: 'Explorer',
    price: 'Free',
    period: '',
    description: 'Discover what your career really looks like',
    features: [
      'Voice discovery sessions',
      '1 career track',
      'Basic Career DNA profile',
      'Resume draft (1 version)',
      'Gap assessment overview',
    ],
    cta: 'Start Free',
    highlighted: false,
  },
  {
    name: 'Professional',
    price: '$49',
    period: '/month',
    description: 'Your full career co-pilot â€” job search and beyond',
    features: [
      'Extended voice sessions',
      'Parallel career tracks',
      'Complete Career DNA profile',
      'Smart documents for each target',
      'Mock interviews by track',
      'Case library with tagging',
      'Post-hire support (probation, 1:1s)',
      'Priority AI access',
    ],
    cta: 'Get Early Access',
    highlighted: true,
    badge: 'Most Popular',
  },
];
---

<section id="pricing" class="section-padding cosmic-bg">
  <div class="container-narrow mx-auto">
    <!-- Section header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <p data-animate class="text-sm font-semibold uppercase tracking-wider text-brand-magenta mb-4">Pricing</p>
      <h2 data-animate class="text-3xl sm:text-4xl lg:text-5xl font-extrabold tracking-tight mb-6 stagger-1">
        Invest in your
        <span class="gradient-text">next chapter</span>
      </h2>
      <p data-animate class="text-lg text-cosmos-500 dark:text-cosmos-400 stagger-2">
        Start free. Upgrade when you're ready to go all-in on your career transition.
      </p>
    </div>

    <!-- Pricing cards -->
    <div class="grid md:grid-cols-2 gap-8 items-start max-w-3xl mx-auto">
      {plans.map((plan, i) => (
        <div
          data-animate
          class={`relative rounded-3xl p-8 transition-all duration-300 stagger-${i + 1}
            ${plan.highlighted
              ? 'bg-gradient-to-b from-cosmos-900 to-cosmos-950 dark:from-cosmos-800 dark:to-cosmos-900 border-2 border-brand-magenta/40 shadow-2xl shadow-brand-magenta/10 scale-[1.02]'
              : 'bg-white dark:bg-cosmos-900/50 border border-cosmos-100 dark:border-cosmos-800'}`}
        >
          {plan.badge && (
            <div class="absolute -top-3 left-1/2 -translate-x-1/2">
              <span class="inline-block px-4 py-1 text-xs font-bold uppercase tracking-wider rounded-full bg-gradient-to-r from-brand-magenta to-brand-amber text-white">
                {plan.badge}
              </span>
            </div>
          )}

          <div class="mb-6">
            <h3 class={`text-xl font-bold mb-2 ${plan.highlighted ? 'text-white' : 'text-cosmos-900 dark:text-white'}`}>
              {plan.name}
            </h3>
            <p class={`text-sm ${plan.highlighted ? 'text-cosmos-400' : 'text-cosmos-500 dark:text-cosmos-400'}`}>
              {plan.description}
            </p>
          </div>

          <div class="flex items-baseline gap-1 mb-8">
            <span class={`text-5xl font-black ${plan.highlighted ? 'gradient-text' : 'text-cosmos-900 dark:text-white'}`}>
              {plan.price}
            </span>
            {plan.period && (
              <span class={`text-base ${plan.highlighted ? 'text-cosmos-400' : 'text-cosmos-500 dark:text-cosmos-400'}`}>
                {plan.period}
              </span>
            )}
          </div>

          <ul class="space-y-3 mb-8">
            {plan.features.map((feature) => (
              <li class="flex items-start gap-3">
                <svg class={`w-5 h-5 mt-0.5 flex-shrink-0 ${plan.highlighted ? 'text-brand-magenta' : 'text-brand-magenta'}`} fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                <span class={`text-sm ${plan.highlighted ? 'text-cosmos-300' : 'text-cosmos-600 dark:text-cosmos-400'}`}>
                  {feature}
                </span>
              </li>
            ))}
          </ul>

          <a
            href="#get-started"
            class={`block text-center py-3.5 px-6 rounded-xl font-semibold transition-all duration-300
              ${plan.highlighted
                ? 'bg-gradient-to-r from-brand-magenta to-brand-amber text-white hover:shadow-lg hover:shadow-brand-amber/25 hover:scale-[1.02]'
                : 'border-2 border-cosmos-200 dark:border-cosmos-700 text-cosmos-700 dark:text-cosmos-300 hover:border-brand-magenta hover:text-brand-magenta dark:hover:border-brand-magenta dark:hover:text-brand-magenta'}`}
          >
            {plan.cta}
          </a>
        </div>
      ))}
    </div>
  </div>
</section>
