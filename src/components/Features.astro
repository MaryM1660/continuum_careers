---

<section id="features" class="section-padding cosmic-bg">
  <div class="container-narrow mx-auto">
    <!-- Section header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <p data-animate class="text-sm font-semibold uppercase tracking-wider text-brand-magenta mb-4">Features</p>
      <h2 data-animate class="text-3xl sm:text-4xl lg:text-5xl font-extrabold tracking-tight mb-6 stagger-1">
        Everything you need.<br />
        <span class="gradient-text">Nothing you don't.</span>
      </h2>
      <p data-animate class="text-lg text-cosmos-500 dark:text-cosmos-400 stagger-2">
        A complete career management platform, not just another resume builder.
      </p>
    </div>

    <!-- Features grid -->
    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {features.map((feature, i) => (
        <div
          data-animate
          class={`group relative rounded-2xl p-6 transition-all duration-300 stagger-${Math.min(i + 1, 5)}
            bg-white/70 dark:bg-cosmos-900/30 border border-cosmos-100 dark:border-cosmos-800
            hover:bg-white dark:hover:bg-cosmos-900/60 hover:shadow-lg hover:shadow-cosmos-200/30 dark:hover:shadow-black/20
            hover:border-cosmos-200 dark:hover:border-cosmos-700 hover:-translate-y-0.5`}
        >
          <!-- Icon -->
          <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-brand-magenta/10 to-brand-amber/10 flex items-center justify-center mb-4 text-brand-magenta group-hover:text-brand-amber transition-colors" set:html={feature.icon} />

          <!-- Title -->
          <h3 class="text-lg font-bold text-cosmos-900 dark:text-white mb-2">
            {feature.title}
          </h3>

          <!-- Description -->
          <p class="text-sm text-cosmos-500 dark:text-cosmos-400 leading-relaxed">
            {feature.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
