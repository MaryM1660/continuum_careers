---
const navLinks = [
  { label: 'How It Works', href: '#how-it-works' },
  { label: 'Features', href: '#features' },
  { label: 'Pricing', href: '#pricing' },
  { label: 'FAQ', href: '#faq' },
];
---

<header id="header" class="fixed top-0 left-0 right-0 z-50 transition-all duration-300">
  <div class="container-narrow mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-18 py-4">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3 group">
        <img src="/logo.svg" alt="Continuum" class="w-10 h-10 transition-transform group-hover:scale-105" />
        <span class="text-xl font-bold tracking-tight text-cosmos-900 dark:text-white">
          Continuum
        </span>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center gap-8">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class="text-sm font-medium text-cosmos-600 hover:text-cosmos-900 dark:text-cosmos-400 dark:hover:text-white transition-colors"
          >
            {link.label}
          </a>
        ))}
      </nav>

      <!-- Right side: Theme toggle + CTA -->
      <div class="flex items-center gap-4">
        <!-- Theme Toggle -->
        <button
          id="theme-toggle"
          class="relative w-10 h-10 rounded-xl flex items-center justify-center text-cosmos-500 hover:text-cosmos-700 dark:text-cosmos-400 dark:hover:text-cosmos-200 hover:bg-cosmos-100 dark:hover:bg-cosmos-800 transition-all"
          aria-label="Toggle theme"
        >
          <!-- Sun icon (shown in dark mode) -->
          <svg class="w-5 h-5 hidden dark:block" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
          <!-- Moon icon (shown in light mode) -->
          <svg class="w-5 h-5 block dark:hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
          </svg>
        </button>

        <!-- CTA Button -->
        <a
          href="#get-started"
          class="hidden sm:inline-flex items-center px-5 py-2.5 text-sm font-semibold rounded-xl bg-gradient-to-r from-brand-teal to-brand-amber text-white hover:shadow-lg hover:shadow-brand-amber/25 transition-all hover:scale-[1.02]"
        >
          Get Early Access
        </a>

        <!-- Mobile Menu Button -->
        <button
          id="mobile-menu-btn"
          class="md:hidden w-10 h-10 rounded-xl flex items-center justify-center text-cosmos-600 dark:text-cosmos-300 hover:bg-cosmos-100 dark:hover:bg-cosmos-800 transition-all"
          aria-label="Open menu"
        >
          <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden absolute top-full left-0 right-0 glass-light dark:glass border-t border-cosmos-200/50 dark:border-cosmos-700/50">
    <div class="container-narrow mx-auto px-4 py-6 flex flex-col gap-4">
      {navLinks.map((link) => (
        <a
          href={link.href}
          class="mobile-nav-link text-base font-medium text-cosmos-700 dark:text-cosmos-300 hover:text-brand-teal py-2 transition-colors"
        >
          {link.label}
        </a>
      ))}
      <a
        href="#get-started"
        class="btn-primary text-center mt-2"
      >
        Get Early Access
      </a>
    </div>
  </div>
</header>

<script is:inline>
  // Theme toggle
  document.getElementById('theme-toggle').addEventListener('click', () => {
    const isDark = document.documentElement.classList.toggle('dark');
    localStorage.setItem('theme', isDark ? 'dark' : 'light');
  });

  // Mobile menu
  const mobileBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  mobileBtn.addEventListener('click', () => {
    mobileMenu.classList.toggle('hidden');
  });

  // Close mobile menu on link click
  document.querySelectorAll('.mobile-nav-link').forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu.classList.add('hidden');
    });
  });

  // Header scroll effect
  const header = document.getElementById('header');
  let lastScroll = 0;
  window.addEventListener('scroll', () => {
    const currentScroll = window.scrollY;
    if (currentScroll > 50) {
      header.classList.add('glass-light', 'dark:glass', 'shadow-sm');
    } else {
      header.classList.remove('glass-light', 'dark:glass', 'shadow-sm');
    }
    lastScroll = currentScroll;
  });
</script>
